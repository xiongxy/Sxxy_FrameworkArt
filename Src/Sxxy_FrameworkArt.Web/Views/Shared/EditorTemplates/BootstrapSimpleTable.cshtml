@using Newtonsoft.Json
@using Newtonsoft.Json.Linq
@{
    var obj = ViewData["bootStrapSimpleTable"] as BootStrapSimpleTable;
    if (obj == null)
    {
        return;
    }
    var str = obj.DataSourcesJson;
    JArray jArray = JArray.Parse(str);
    if (jArray.Count == 0)
    {
        return;
    }

}
<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Responsive Hover Table</h3>
                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">
                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            @{
                                foreach (var item in (JObject)jArray[0])
                                {
                                    <th>@item.Key</th>
                                }
                            }
                        </tr>

                        @{
                            foreach (var itemJarray in jArray)
                            {
                                <tr>
                                    @foreach (var itemJobject in (JObject)itemJarray)
                                    {
                                        <th>@itemJobject.Value</th>
                                    }
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>