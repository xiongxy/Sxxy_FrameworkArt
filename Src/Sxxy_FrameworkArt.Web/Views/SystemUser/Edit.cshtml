@model Sxxy_FrameworkArt.Web.ViewModels.System.SystemUserViewModels.SystemUserViewModel
@using (Bootstrap.ModalWindowDialog(Model.ViewModelId))
{
    using (Bootstrap.ModalWindowContent())
    {
        using (Bootstrap.BootStrapForm("SystemUser/Edit", "myForm", "Post"))
        {
            using (Bootstrap.ModalWindowHeader())
            {
                <div>修改用户</div>
            }
            using (Bootstrap.ModalWindowBody())
            {
                @Bootstrap.TextField(x => x.Entity.Code)
                @Bootstrap.TextField(x => x.Entity.Email)
                @Bootstrap.TextField(x => x.Entity.Name)
                @Bootstrap.TextField(x => x.Entity.WorkPhone)
                @Bootstrap.TextField(x => x.Entity.CellPhone)
                @Bootstrap.TextField(x => x.Entity.HomePhone)
                @Bootstrap.TextField(x => x.Entity.FaxNum)
                @Bootstrap.TextField(x => x.Entity.Address)
                @Bootstrap.TextField(x => x.Entity.ZipCode)
                @Bootstrap.TextField(x => x.Entity.StartWorkDate)
                @Bootstrap.Select2(x => x.SelectedRolsIds, x => x.AllRoles)
            }
            using (Bootstrap.ModalWindowFooter())
            {
                @Bootstrap.Button("提交", "submit")
            }
        }
    }
}
<script>
    SxxyJs.ModalFormSubmit();
    SxxyJs.FormErrorMessageCheck("@Model.ViewModelId");
</script>
